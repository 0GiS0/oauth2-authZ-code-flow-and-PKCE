<%- include('partials/header'); -%>
<!--Stepper from Codepen: https://codepen.io/thdeux/pen/zBGNrM-->
<div class="md-stepper-horizontal orange">
    <div class="md-step">
        <a href="/">
            <div class="md-step-circle"><span>1</span></div>
        </a>
        <div class="md-step-title">Get the authorization code</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
    <div class="md-step active">
        <div class="md-step-circle"><span>2</span></div>
        <div class="md-step-title">Exchange the authorization code for a token</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
    <div class="md-step">
        <div class="md-step-circle"><span>3</span></div>
        <div class="md-step-title">Get the access token</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
    <div class="md-step">
        <div class="md-step-circle"><span>4</span></div>
        <div class="md-step-title">Calling the API</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
</div>


<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                Authentication Code Granted
            </div>
            <form action="/exchange/the/code/for/a/token" method="POST">
                <div class="card-body">
                    <p class="card-text">This is your authentication code:</p>
                    <pre class="language-http"><%= code %></pre>
                    <input type="hidden" name="code" value="<%=code %>" />
                    <p class="card-text">And this is the state that it returned from the authorization server:
                    </p>
                    <pre class="language-http"><%= state %></pre>
                    <p class="card-text">Now you have to exchange it for an access token.</p>
                    <div class="text-center">
                        <input type="submit" class="btn btn-primary" value="Exchange the code for an access token" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>

<%- include('partials/footer'); -%>

</body>

</html>